# CockroachDB Configuration (Sessions)
WHATSAPP_SESSIONS_POSTGRESQL_URL=postgresql://user:password@your-cockroach-cluster.cockroachdb.cloud:26257/waha_sessions?sslmode=require

# CockroachDB Configuration (Media)
WAHA_MEDIA_POSTGRESQL_URL=postgresql://user:password@your-cockroach-cluster.cockroachdb.cloud:26257/waha_media?sslmode=require

# WAHA Configuration
WHATSAPP_DEFAULT_ENGINE=GOWS
PORT=3000
WHATSAPP_API_KEY_EXCLUDE_PATH=ping,health
NODE_OPTIONS=--max-old-space-size=400

# Dashboard Configuration
WAHA_DASHBOARD_USERNAME=admin
WAHA_DASHBOARD_PASSWORD=your-secure-password

# Webhook Configuration (Optional - for n8n integration)
WHATSAPP_HOOK_URL=https://your-n8n-instance.hf.space/webhook/whatsapp-payload

# API Key (Optional - auto-generated if not set)
WAHA_API_KEY=your-api-key-here

# Media Storage Configuration
WAHA_MEDIA_STORAGE=postgresql
